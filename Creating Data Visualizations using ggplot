#Creating Data Visualizations using ggplot

library(datasets)
# Load Data
data(mtcars)

# View first 5 rows
head(mtcars, 5)

#get information on mtcars
?mtcars

#install ggplot2 package
install.packages("ggplot2")

#load ggplot package
library(ggplot2)
# create a scatterplot of displacement (disp) and miles per gallon (mpg)
ggplot(aes(x=disp,y=mpg,),data=mtcars)+geom_point()

# Add a title
ggplot(aes(x=disp,y=mpg,),data=mtcars)+geom_point()+ggtitle("displacement vs miles per gallon")

# change axis name
ggplot(aes(x=disp,y=mpg,),data=mtcars)+geom_point()+ggtitle("displacement vs miles per gallon") + labs(x = "Displacement", y = "Miles per Gallon")

#make vs a factor
mtcars$vs <- as.factor(mtcars$vs)

# create boxplot of the distribution for v-shaped and straight Engine
ggplot(aes(x=vs, y=mpg), data = mtcars) + geom_boxplot()

#add color 
ggplot(aes(x=vs, y=mpg, fill = vs), data = mtcars) + 
  geom_boxplot(alpha=0.9) +
  theme(legend.position="none")

#create a histogram of weight
ggplot(aes(x=wt),data=mtcars) + geom_histogram(binwidth=0.03)

#add title
ggplot(aes(x=wt),data=mtcars) + geom_histogram(binwidth=0.03)+
  ggtitle("Distribution of car weight")

#add color to histogram 
ggplot(aes(x=wt),data=mtcars) + geom_histogram(binwidth=0.03)+
  ggtitle("Distribution of car weight") + 
  geom_histogram(color="blue", fill="pink")

#change axis name
ggplot(aes(x=wt),data=mtcars) + geom_histogram(binwidth=0.03) +
ggtitle("Distribution of car weight") +labs(x = "Weight", y = "Number of Cars") + 
  geom_histogram(color="blue", fill="pink")
 
